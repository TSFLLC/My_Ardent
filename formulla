

// Departments
ClearCollect(
    colDepts,
    Sort('kpi.Department', Department, Ascending)
);

// Pillars
ClearCollect(
    colPillars,
    Sort('kpi.Pillar', Pillar, Ascending)
);

// Years (avoid Year() conflict by renaming to Yr)
ClearCollect(
    colYears,
    Sort(
        Distinct(
            ShowColumns(
                RenameColumns('kpi.vKPI_OnePager', "Year", "Yr"),
                "Yr"
            ),
            "Yr"
        ),
        Result,
        Descending
    )
);

// Quarters
ClearCollect(
    colQuarters,
    ["Q1","Q2","Q3","Q4"]
);
