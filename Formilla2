SortByColumns(
    AddColumns(
        Filter(
            'kpi.vKPI_OnePagerUX',
            DeptCode = vDeptCode,
            KPIYear  = vYear,
            IsBlank(vQuarter) || Quarter = vQuarter
        ) As r,
        "_ord",
        Switch(
            Lower(Trim(r.Pillar)),
            "people first",        1,
            "value driven",        2,
            "consumer centered",   3,
            "growth minded",       4,
            999
        )
    ),
    "_ord",
    SortOrder.Ascending
)
